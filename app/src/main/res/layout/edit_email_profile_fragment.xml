<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Negro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgLogoOldEmailEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:scaleX="1.3"
                android:scaleY="1.3"
                app:srcCompat="@drawable/mail" />

            <EditText
                android:id="@+id/edtOldEmailEdit"
                android:layout_width="517dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/edtOldEmailEdit"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/Blanco"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgLogoEmailEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:scaleX="1.3"
                android:scaleY="1.3"
                app:srcCompat="@drawable/mail" />

            <EditText
                android:id="@+id/edtNewEmailEdit"
                android:layout_width="517dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/edtNewEmailEdit"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/Blanco"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgLogoRepeatEmailEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:scaleX="1.3"
                android:scaleY="1.3"
                app:srcCompat="@drawable/mail" />

            <EditText
                android:id="@+id/edtRepeatNewEmailEdit"
                android:layout_width="517dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/edtRepeatNewEmailEdit"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/Blanco"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <Button
                android:id="@+id/btnAcceptEditEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Negro"
                android:text="@string/btnAcceptEditProfile"
                android:textColor="@color/Blanco" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>