<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgLogoOldEmailEdit"
                android:layout_width="80dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:scaleX="1.3"
                android:scaleY="1.3"
                app:srcCompat="@mipmap/ic_email_icon_foreground" />

            <EditText
                android:id="@+id/edtOldEmailEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/edtOldEmailEdit"
                android:inputType="textEmailAddress"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imgLogoEmailEdit"
            app:srcCompat="@mipmap/ic_email_icon_foreground"
            android:layout_width="80dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:scaleX="1.3"
            android:scaleY="1.3" />

            <EditText
                android:id="@+id/edtNewEmailEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/edtNewEmailEdit"
                android:inputType="textEmailAddress"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgLogoRepeatEmailEdit"
                android:layout_width="80dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:scaleX="1.3"
                android:scaleY="1.3"
                app:srcCompat="@mipmap/ic_email_icon_foreground" />

            <EditText
                android:id="@+id/edtRepeatNewEmailEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/edtRepeatNewEmailEdit"
                android:inputType="textEmailAddress"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <Button
                android:id="@+id/btnAcceptEditEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btnAcceptEditProfile" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>