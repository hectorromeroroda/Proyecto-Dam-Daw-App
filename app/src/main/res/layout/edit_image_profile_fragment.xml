<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Negro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <ImageView
                    android:id="@+id/imgUserEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingVertical="20dp">

                <ImageButton
                    android:id="@+id/imgbLoadImageCamera"
                    android:layout_width="66dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:elevation="0dp"
                    android:scaleType="fitCenter"
                    android:scaleX="1"
                    android:scaleY="1"
                    app:srcCompat="@drawable/photo_camera" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/imgbLoadImageEdit"
                    android:layout_width="93dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    android:scaleType="fitCenter"
                    android:scaleX="1"
                    android:scaleY="1"
                    app:srcCompat="@drawable/picture" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <Button
                    android:id="@+id/btnAcceptEditImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Negro"
                    android:text="@string/btnAcceptEditProfile"
                    android:textColor="@color/LilaFuerte" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>