<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blanco"
    tools:context="com.example.hector.proyectodamdaw.Rows.RowMyCommunitie">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgRowLogoCommunitie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_balance_foreground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/txvRowNameCommunitie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/Negro" />

            <TextView
                android:id="@+id/txvrowDescriptionCommunitie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/Negro" />

            <TextView
                android:id="@+id/txvRowNumUsersCommunitie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/Negro" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageButton
                android:id="@+id/BtnEncuesta"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/elections" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VotaciÃ³n"
                android:textColor="@color/Negro" />

            <ImageButton
                android:id="@+id/BtnPost"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/post_it" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posts"
                android:textColor="@color/Negro" />

            <ImageButton
                android:id="@+id/BtnPropuestas"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/community" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Propuestas"
                android:textColor="@color/Negro" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
